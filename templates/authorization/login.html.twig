{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData,'security') }}</div>
    {% endif %}

    <form action="{{ path('loginAction') }}" method = "post">
        Username: <input type="text" id="username" name="_username" value="{{ last_username }}"/>
        Password: <input type="password" id="password" name="_password" />

        <button type="submit">Enter</button>
    </form>

{% endblock %}